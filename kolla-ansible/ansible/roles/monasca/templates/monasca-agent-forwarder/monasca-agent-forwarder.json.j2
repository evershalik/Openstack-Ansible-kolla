{
    "command": "monasca-forwarder --config-file=/etc/monasca/agent-forwarder.yml",
    "config_files": [
        {
            "source": "{{ container_config_directory }}/agent-forwarder.yml",
            "dest": "/etc/monasca/agent-forwarder.yml",
            "owner": "monasca",
            "perm": "0600"
        }
    ],
    "permissions": [
        {
            "path": "/var/log/kolla/monasca",
            "owner": "monasca:kolla",
            "recurse": true
        }
    ]
}
