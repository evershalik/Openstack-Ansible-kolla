{
    "command": "monasca-persister --config-file /etc/monasca/persister.conf",
    "config_files": [
        {
            "source": "{{ container_config_directory }}/persister.conf",
            "dest": "/etc/monasca/persister.conf",
            "owner": "monasca",
            "perm": "0600"
        }
    ],
    "permissions": [
        {
            "path": "/var/log/kolla/monasca",
            "owner": "monasca:kolla",
            "recurse": true
        }
    ]
}
